<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CustomSplash">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.RanairuCreation.AppBarOverlay"
        tools:ignore="MissingConstraints,WebViewLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Custom Splash"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:layout_width="32dp"
                android:id="@+id/splashloading"
                android:layout_gravity="center"
                android:layout_height="31dp" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
<Button
    android:layout_width="match_parent"
    android:background="#FFC107"
    android:id="@+id/gotosplash"
    android:drawableLeft="@drawable/ic_baseline_info_24"
    android:padding="10dp"
    android:textSize="12dp"
    android:text="Note : Sesudah Download, Pilih Custom Splash > "
    android:layout_height="wrap_content"/>
    <WebView
        android:layout_width="match_parent"
        android:id="@+id/splash_webview"
        android:layout_height="match_parent"/>

</LinearLayout>